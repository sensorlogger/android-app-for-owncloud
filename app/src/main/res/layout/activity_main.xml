<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TLD Input -->
        <EditText
            android:id="@+id/tldInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TLD (e.g., example.com)"
            android:inputType="text" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <!-- Interval Input -->
        <EditText
            android:id="@+id/intervalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interval (seconds)"
            android:inputType="number" />

        <!-- Dynamic Checkboxes for Sensors -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Sensors:"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/sensorCheckboxContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Configuration"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Sensor Configurations"
            android:layout_marginTop="16dp" />

        <!-- Start Service Button -->
        <Button
            android:id="@+id/startServiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Service"
            android:layout_marginTop="8dp" />

        <!-- Stop Service Button -->
        <Button
            android:id="@+id/stopServiceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Service"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
